  {{#liquid-bind model use="fade" class="demo-container" as |currentModel|}} 
    <div class="ui top attached menu">
      {{#link-to 'applicants' class='circular accent-color ui icon item button'}}
        <i class="icon right chevron" style="color: white;"></i>
      {{/link-to}}
{{!--       <div class="ui right menu">
        {{ui-radio name="do_not_hire" class="accent-color item" label="Do not hire this person" value="do_not_hire" current=currentModel.status onChange=(action 'changeStatus')}}
        {{ui-radio name="hire" class="accent-color item" label="I intend to hire this person" value="hire" current=currentModel.status onChange=(action 'changeStatus')}}
