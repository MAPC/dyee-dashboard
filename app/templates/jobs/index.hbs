{{#ui-table fields=fields
            model=sortedModel
            class='scrollable'
            transition=transition
            resource=resource}}
  <div class="table-shadow"></div>
{{/ui-table}}
{{#if (gt model.jobs.length 20)}}
  <div class="ui basic segment center aligned">
    <button class="circular ui icon button {{unless min 'disabled'}}" onclick={{if min (action 'first')}}>
      <i class="angle double up icon"></i>
    </button>
    <button class="circular ui icon button {{unless min 'disabled'}}" onclick={{if min (action 'previous')}}>
      <i class="up chevron icon"></i>
    </button>
    <button class="circular ui icon button {{if (gte max model.length) 'disabled'}}" onclick={{action 'next'}}>
      <i class="down chevron icon"></i>
    </button>
    <button class="circular ui icon button {{if (gte max model.length) 'disabled'}}" onclick={{action 'last'}}>
      <i class="angle double down icon"></i>
    </button>
  </div>
{{/if}}